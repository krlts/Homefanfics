{% extends '::base.html.twig' %}

{% block title %}Contacto{% endblock%}

{% block body %}
<header>
    <h1>Contacto Homefanfics</h1>
</header>

<p>¿Quiere contactárnos?</p>

    {% if app.session.FlashBag ('blogger-notice') %}
<div class="blogger-notice">
        {{ app.session.flash('blogger-notice') }}
    </div>
    {% endif %}
    <center>
        <form action="{{ path('HffBlogBundle_contacto') }}" method="post" {{ form_enctype(form) }} class="blogger">

            {{ form_errors(form) }}
            <table>
                <tr><td>{{form_label(form.nombre)}}</td><td>{{ form_widget(form.nombre) }}</td></tr>
                <tr><td>{{form_label(form.email)}}</td><td>{{ form_widget(form.email) }}</td></tr>
                <tr><td>{{form_label(form.asunto)}}</td><td>{{ form_widget(form.asunto) }}</td></tr>
                <tr><td>{{form_label(form.mensaje)}}</td><td>{{ form_widget(form.mensaje) }}</td></tr>
            </table>
        {{ form_rest(form) }}

            <input type="submit" value="Enviar Mensaje" />

        </form>
    </center>
{% endblock %}
