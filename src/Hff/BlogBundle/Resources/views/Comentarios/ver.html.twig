<table class="table-bordered table-hover input-block-level">
    <tr>
        <td><small>Comentado por </small><a href="{{ path('usuario_ver', {'id': entity.emisor }) }}">{{emisor.usuario}}</a>
            <small> el {{ entity.fechaCreacion | date('d-m-Y', 'America/Santiago') }} a las {{ entity.fechaCreacion | date('G:i') }} 
            {% if entity.emisor == app.user.id %}
                    <button class="btn btn-success btn-mini" type="submit"><a style="color: white" href="{{ path('comentario_editar', {'id': entity.id }) }}"><i class="icon-pencil icon-white"></i> Editar</a></button>
            {% endif %}
            </small></td>
    </tr>
    <tr >
        <td><p>{{ entity.mensaje|raw }}</p></td>
    </tr>  
</table>


