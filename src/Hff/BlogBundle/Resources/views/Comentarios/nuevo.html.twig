{% extends '::base.html.twig' %}
{% block title %}Nuevo Comentario{% endblock %}
{% block body -%}
<div class="hero-unit">

<form action="{{ path('comentario_crear') }}" method="post" {{ form_enctype(form) }}>

    <table>
        <tr>
            <td>{{ form_widget(form.mensaje)}} {{ form_errors(form.mensaje) }}</td>          
        </tr>
                {{ form_rest(form) }}
        <tr>
            <td><button class="btn btn-success"type="submit">Ingresar Comentario</button></td>
        </tr>
    </table> 
</form>
</div>
{% endblock %}

