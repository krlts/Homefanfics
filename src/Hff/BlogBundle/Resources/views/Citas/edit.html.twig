{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Editar Cita</h1>

    <form action="{{ path('citas_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Editar Cita</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('citas') }}">  
            Volver a la lista de citas
        </a> 
    </li>
    <li>
        <form action="{{ path('citas_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Borrar Cita</button>
        </form>
    </li>
</ul>
{% endblock %}
