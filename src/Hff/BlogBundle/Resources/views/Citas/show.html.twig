{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Citas</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Cita</th>
                <td>{{ entity.texto }}</td>
            </tr>
            <tr>
                <th>Autor</th>
                <td>{{ entity.autor }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('citas') }}">
            Volver a la lista de citas
        </a>
    </li>
    <li>
        <a href="{{ path('citas_new') }}">
                Ingresar una nueva cita
            </a>
    </li>
    <li>
        <a href="{{ path('citas_edit', { 'id': entity.id }) }}">
            Editar Cita
        </a>
            
    </li>
    <li>
        <form action="{{ path('citas_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Borrar Cita</button>
        </form>
    </li>
</ul>
{% endblock %}
