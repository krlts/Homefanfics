{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Editar Categoria</h1>

    <form action="{{ path('categoria_actualizar', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {#{ form_widget(edit_form) }#}
        <center>
            <table>
                <tr>
                    <td>{{ form_label(edit_form.nombre, 'Nombre de la Categoría')}}</td>
                    <td>{{ form_widget(edit_form.nombre)}} {{ form_errors(edit_form.nombre) }}</td>          
                </tr>
                <tr>
                    <td>{{ form_label(edit_form.descripcion, 'Descripción')}}</td>
                    <td>{{ form_widget(edit_form.descripcion)}} {{ form_errors(edit_form.descripcion) }}</td>          
                </tr>
                 <tr>
                    <td>{{ form_label(edit_form.imagen, 'Imagen')}}</td>
                    <td>{{ form_widget(edit_form.imagen)}} {{ form_errors(edit_form.imagen) }}</td>          
                </tr>
                {{ form_rest(edit_form) }}
            </table>
        </center>  
        <p>
            <button type="submit">Editar Categoría</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('categoria') }}">
            Volver a la lista de categorías
        </a>
    </li>
    <li>
        <form action="{{ path('categoria_borrar', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Borrar categoría</button>
        </form>
    </li>
</ul>
{% endblock %}
