{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Editar Categoria</h1>

    <form action="{{ path('categorias_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Editar Categoría</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('categorias') }}">
            Volver a la lista de categorías
        </a>
    </li>
    <li>
        <form action="{{ path('categorias_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Borrar categoría</button>
        </form>
    </li>
</ul>
{% endblock %}
