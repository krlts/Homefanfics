{% extends '::base.html.twig' %}

{% block body -%}
<h1>Categorias</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nombre</th>
            <td>{{ entity.nombre }}</td>
        </tr>
        <tr>
            <th>Descripción</th>
            <td>{{ entity.descripcion }}</td>
        </tr>
        <tr>
            <th>Imagen</th>
            <td>{{ entity.imagen }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('categorias_new') }}">
            Ingresar una nueva categoría
        </a>
    </li>
    <li>
        <a href="{{ path('categorias') }}">
            Volver a la lista de categorías
        </a>
    </li>
    <li>
        <a href="{{ path('categorias_edit', { 'id': entity.id }) }}">
            Editar Categoría
        </a>
    </li>
    <li>
        <form action="{{ path('categorias_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Borrar Categoría</button>
        </form>
    </li>
</ul>
{% endblock %}
