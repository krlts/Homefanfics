{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Usuarios list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Usuario</th>
                <th>Password</th>
                <th>Nombrereal</th>
                <th>Bloqueado</th>
                <th>Email</th>
                <th>Enviarmail</th>
                <th>Fecharegistro</th>
                <th>Ultimavisita</th>
                <th>Ultimaip</th>
                <th>Rol</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('usuarios_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.usuario }}</td>
                <td>{{ entity.password }}</td>
                <td>{{ entity.nombreReal }}</td>
                <td>{{ entity.bloqueado }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.enviarMail }}</td>
                <td>{% if entity.fechaRegistro %}{{ entity.fechaRegistro|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.ultimaVisita %}{{ entity.ultimaVisita|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.ultimaIp }}</td>
                <td>{{ entity.rol }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('usuarios_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('usuarios_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('usuarios_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
