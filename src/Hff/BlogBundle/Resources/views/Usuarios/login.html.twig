{% extends '::base.html.twig' %}

{% block title %}Accede a tu cuenta {% endblock %}
{% block id 'login' %}

{% block sidebar %}
<section id="entrar">
    <h1>{{ "Accede a tu cuenta" | trans }}</h1>

    {% if error %}
        <div>{{ error.message }}</div>
    {% endif %}

    <form action="{{ path('usuario_login_check') }}" method="post">
        <label for="usuario">{{ "Usuario" | trans }}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />

        <label for="password">{{ "Contraseña" | trans }}</label>
        <input type="password" id="password" name="_password" />

        <input type="checkbox" id="remember_me" name="_remember_me" checked />
        <label for="remember_me">{{ "No cerrar sesión" | trans }}</label>

        <input class="boton" type="submit" name="login" value="{{ "Entrar" | trans }}" />
    </form>
</section>

<section id="registrar">
    <a class="boton" href="{{ path('usuarios_new') }}">{{ "Regístrate gratis como usuario" | trans }}</a>
</section>
{% endblock %}

{% block aside %}
{% endblock %}
