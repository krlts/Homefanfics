{% extends '::base.html.twig' %}
{% block title %}Mis Comentarios{% endblock %}
{% block body -%}
<div class="hero-unit">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#Mios" data-toggle="tab"><b><i class="icon-pencil"></i> Mis Comentarios</b></a></li>
        <li><a href="#enEscritos" data-toggle="tab"><b><i class="icon-comment"></i> En mis Escritos</b></a></li>
    </ul>
    <div class="tabbable">
        <div class="tab-content border">
            <div class="tab-pane active" id="Mios">
                {% for comentario in comentarios %}
                    {{ render(controller('HffBlogBundle:Comentarios:resumen', {'id': comentario.id } )  ) }}
                {% endfor %}
                </div>
            {# Tab En Mis Escritos #}
                <div class="tab-pane" id="enEscritos">
                    {% for escrito in escritos %}
                    <h4>En<a  href="{{path('escrito_ver', {'id': escrito.id })}}"> {{escrito.titulo}} </a></h4>
                    {{ render(controller('HffBlogBundle:Comentarios:resumen2', {'idEscrito': escrito.id } )  ) }}
                {% endfor %}

                </div>
            </div>
        </div>
    </div>
{% endblock %}

