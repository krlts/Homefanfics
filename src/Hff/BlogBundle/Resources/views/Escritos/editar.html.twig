{% extends '::base.html.twig' %}
{% block title %}Editar {{ entity.titulo }}{% endblock %}
{% block body -%}

{% if entity.usuario.id == app.user.id %}
<form action="{{ path('escrito_actualizar', {'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class="hero-unit">

    {{ form_widget(edit_form)}}  
        <p>
            <button style="color: black" class="btn btn-warning" type="submit"><i class="icon-pencil"></i> Editar Escrito</button>
        </p>
    </div>
</form>
{% else %}
 {{ render(controller('HffBlogBundle:Escritos:ver', { 'id': entity.id })) }}
{% endif%}

{% endblock %}
